# Made4Founders Backend Configuration

# Database
DATABASE_URL=sqlite:///./data/made4founders.db

# CORS Origins (comma-separated)
CORS_ORIGINS=https://made4founders.com

# Secret key for JWT (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# App Encryption Key for sensitive data (generate with: openssl rand -hex 16)
APP_ENCRYPTION_KEY=your-encryption-key-here

# Frontend URL for OAuth redirects
FRONTEND_URL=https://made4founders.com

# Google OAuth (Auth + Calendar)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://made4founders.com/api/auth/google/callback
GOOGLE_CALENDAR_REDIRECT_URI=https://made4founders.com/api/google-calendar/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=https://made4founders.com/api/auth/github/callback

# Plaid (Real-time bank data)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENVIRONMENT=sandbox
PLAID_REDIRECT_URI=https://made4founders.com/plaid/callback

# Stripe (Revenue metrics & Connect)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_CONNECT_CLIENT_ID=ca_xxx  # For connecting user's Stripe accounts

# Mailchimp (optional)
MAILCHIMP_API_KEY=your-mailchimp-api-key

# Amazon SES Email Configuration
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USERNAME=your-ses-smtp-username
SMTP_PASSWORD=your-ses-smtp-password
EMAIL_FROM=notifications@made4founders.com
EMAIL_SUPPORT=support@made4founders.com

# Scheduler API Key (for automated jobs like notifications and backups)
SCHEDULER_API_KEY=your-scheduler-api-key

# Backup Configuration
AWS_REGION=us-east-1
BACKUP_S3_BUCKET=your-backup-bucket-name
BACKUP_S3_PREFIX=backups/made4founders/
BACKUP_RETENTION_DAYS=30

# Sentry Error Tracking (optional)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
ENVIRONMENT=production
APP_VERSION=1.0.0

# Slack Integration (Notifications)
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_REDIRECT_URI=https://made4founders.com/api/slack/callback

# Alerting (optional)
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
ALERT_EMAIL=alerts@made4founders.com

# AI/LLM Providers
# Local LLM (Ollama) - runs on localhost, no API key needed
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# Cloudflare Workers AI (recommended - free tier: 10k requests/day)
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token
CLOUDFLARE_AI_MODEL=@cf/meta/llama-3.2-3b-instruct

# OpenAI (optional - paid cloud fallback)
# OPENAI_API_KEY=sk-xxx
# OPENAI_MODEL=gpt-4o-mini

# Anthropic (optional - paid cloud fallback)
# ANTHROPIC_API_KEY=sk-ant-xxx
# ANTHROPIC_MODEL=claude-3-5-haiku-20241022

# LLM Fallback Settings
LLM_PREFER_LOCAL=true
LLM_ENABLE_FALLBACK=true
